<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Material" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- Checkbox -->

    <style name="mova_checkbox" parent="android:Widget.CompoundButton.CheckBox">
        <!-- text -->
        <item name="android:textColorHint">@color/greyscale_900</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <!-- Selector  -->
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="input_field" parent="android:Widget.EditText">
        <!-- text -->
        <item name="android:textColorHint">@color/greyscale_500</item>
        <item name="android:textColor">@color/greyscale_900</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">14sp</item>
        <!-- colors -->
        <item name="android:drawableTint">@color/greyscale_500</item>
        <!-- Padding -->
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:drawablePadding">12sp</item>
        <!-- Background and Radius -->
        <item name="android:background">@drawable/input_field_shape</item>
    </style>
    
    <!-- Primary button -->

    <style name="primary_button_rounded" parent="@style/ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="rippleColor">@color/primary_300</item>
        <item name="android:backgroundTint">@color/primary_500</item>
        <!-- text -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">16sp</item>
        <!-- padding -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <!-- Secondary button -->
    <style name="secondary_button_rounded" parent="@style/primary_button_rounded">
        <item name="rippleColor">@color/primary_400</item>
        <item name="android:textColor">@color/primary_500</item>
        <item name="android:backgroundTint">@color/transparent_red</item>
    </style>

    <!-- Text button -->

    <style name="text_button" parent="@style/Widget.Material3.Button.TextButton">
        <item name="rippleColor">@color/primary_200</item>
        <!-- text -->
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">14sp</item>
        <!-- padding -->
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <!-- remove default constraints -->
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <!-- Icon button -->

    <style name="icon_button" parent="@style/ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="rippleColor">@color/greyscale_300</item>
        <!-- icon -->
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24dp</item>
        <!-- padding -->
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <!-- remove default -->
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="icon_button.small" parent="@style/icon_button">
        <item name="iconSize">20dp</item>
    </style>

    <style name="icon_button.large" parent="@style/icon_button">
        <!-- padding -->
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="icon_button_tonal" parent="@style/ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="rippleColor">@color/primary_200</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">16dp</item>
        <!-- icon -->
        <item name="iconTint">@color/primary_500</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24dp</item>
        <!-- remove default -->
        <item name="backgroundTint">@color/transparent_red</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <!-- Social login buttons -->

    <style name="social_login_button" parent="@style/Widget.Material3.Button.OutlinedButton.Icon">
        <item name="rippleColor">@color/greyscale_100</item>
        <!-- text -->
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greyscale_900</item>
        <!-- padding -->
        <item name="paddingStart">32dp</item>
        <item name="paddingEnd">32dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <!-- icon -->
        <item name="iconSize">24dp</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">12dp</item>
        <item name="iconGravity">textStart</item>
        <!-- corners -->
        <item name="strokeColor">@color/greyscale_200</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="social_login_icon_button" parent="@style/social_login_button">
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="iconPadding">0dp</item>
    </style>

    <!-- bottom nav view -->

    <style name="bottom_nav_view" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/body_small_bold</item>
        <item name="itemTextAppearanceInactive">@style/body_small_medium</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemIconSize">22dp</item>
    </style>

</resources>