<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- SOLID -->
    <item>
        <shape>
            <solid android:color="@color/dark_1" />
        </shape>
    </item>

    <!-- IMG -->
    <item>
        <bitmap android:src="@drawable/onboarding_background_image" />
    </item>

    <!-- GRADIENT -->
    <item>
        <shape>
            <gradient
                android:startColor="@android:color/transparent"
                android:endColor="@color/dark_1"
                android:angle="270" />
        </shape>
    </item>

</layer-list>